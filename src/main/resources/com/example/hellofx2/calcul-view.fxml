<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hellofx2.controller.CalculController"
>

    <Label text="Let's calculate" layoutX="100" layoutY="20" />

    <TextField
        fx:id="value1"
        prefHeight="10"
        prefWidth="40"
        layoutX="50"
        layoutY="50"
    />

    <TextField
        fx:id="value2"
        prefHeight="10"
        prefWidth="40"
        layoutX="180"
        layoutY="50"
    />

    <ComboBox
        fx:id="chooseOperation"
        prefHeight="10"
        prefWidth="50"
        layoutX="120"
        layoutY="50"
    />

    <Button
        fx:id="calculateBtn"
        text="Calculate"
        layoutX="120"
        layoutY="100"

        onAction="#onClicked"
    />

    <Label
        fx:id="response"
        layoutX="120"
        layoutY="140"
        style="-fx-font-weight: bold;"
    />
</AnchorPane>
